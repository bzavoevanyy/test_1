.sidebar-wrapper
    a(href='#').catalog Весь каталог
    a(href='#').tourist Юристам
    ul.tourist-list
        - var urlist = ['Банковское дело','НФО (некред.фин. орг-ции)','Кассирам']
            each item in urlist
                li.tourist-list__item
                    a(href='#').tourist-list__link= item
    a(href='#').tourist Виды услуг
    ul.tourist-list
        - var urlist = ['Семинары и конференции','Курсы повышения калификации ']
        each item in urlist
            li.tourist-list__item
                a(href='#').tourist-list__link= item
    a(href='#').tourist Календарь мероприятий
    .calendar Здесь виджет "Календарь"
    a(href='#').catalog Ближайшие семинары
    a(href='#').tourist Новости
    .news
        .news-block
            h5 Заголовок
            h6 29.12.2015
            p Lorem ipsum dolor sit amet, consectetur adipisicing elit. At dignissimos laborum magni nam repellendus, rerum vitae voluptatum. Animi atque, cum dolor ducimus, explicabo fugit, perspiciatis quibusdam recusandae similique voluptate voluptatibus.
